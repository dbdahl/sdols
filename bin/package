#!/bin/bash

cd $(dirname $(readlink -f "$0"))/..

sbt package

JARDEST=$PWD/R/austin/inst/java
rm -rf "$JARDEST"
mkdir -p "$JARDEST"/scala-2.12
cp target/scala-2.12/austin_2.12-1.0.jar "$JARDEST"/scala-2.12
cp lib_managed/jars/org.apache.commons/commons-math3/commons-math3-3.6.1.jar "$JARDEST"

cd R

R CMD INSTALL austin

